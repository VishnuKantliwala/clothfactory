<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    
    
    <filter>
        <filter-name>loginFilter</filter-name>
        <filter-class>loginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <url-pattern>/checkLogin</url-pattern>
    </filter-mapping>
    
    <servlet>
        <servlet-name>addTax</servlet-name>
        <servlet-class>addTax</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addStock</servlet-name>
        <servlet-class>addStock</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>dashboard.jsp</servlet-name>
        <jsp-file>/dashboard.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AddCustomer</servlet-name>
        <servlet-class>AddCustomer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddVendor</servlet-name>
        <servlet-class>AddVendor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddEmployee</servlet-name>
        <servlet-class>AddEmployee</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editStock</servlet-name>
        <servlet-class>editStock</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>fetchVendor</servlet-name>
        <servlet-class>fetchVendor</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>fetchVendor</servlet-name>
        <url-pattern>/fetchvendor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addTax</servlet-name>
        <url-pattern>/addTax</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addStock</servlet-name>
        <url-pattern>/addStock</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dashboard.jsp</servlet-name>
        <url-pattern>/dashboard/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCustomer</servlet-name>
        <url-pattern>/AddCustomer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddVendor</servlet-name>
        <url-pattern>/AddVendor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddEmployee</servlet-name>
        <url-pattern>/AddEmployee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editStock</servlet-name>
        <url-pattern>/editStock</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
